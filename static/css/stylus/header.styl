.header_servicios
  background url(../images/header-servicios.png) left top no-repeat
  background-size cover
  height 500px
  display block
  position relative

  // Section All ==> Header
  >.section
    display block

    // Section No.1 ==> Header
    &:nth-child(1)
      padding-top 9em
      color white
      h1
        font-size 3em
        text-align left
        margin 0
        margin-top 0.5em
        padding 0
      p
        font-size 1.1em
        width 60%
        margin 1.5em 0 2em 0
    // Section (2),(3) ==> Header
    &:nth-child(2),
    &:nth-child(3)
      display block
      background-color white
      ul
        text-align left
        margin 0
        list-style none
        padding 0.5em
        box-sizing border-box
        li
          display: inline-block
          margin-right 2em
          &:last-child
            margin-right 0px
            padding 0
          figure
            margin 0
            transition all .5s
            &:hover
              cursor pointer
              transform scale(1.2)
    &:nth-child(3)
      margin-top 1em

