.porque
  display block
  margin-top 100px
  .section
    &:first-child
      h2
        display block
        text-align: left
        margin-bottom 0.7em
      figure
        display inline-block
        margin 0
        padding: 0
        vertical-align: top
        margin-top 1.1em
        margin-left 2em
        img
            padding 0
            margin 0
      p
        display inline-block
        text-align left
        vertical-align: top

.titulo
    /* ¿PORQUÉ VENDER TIEMP: */
    font-weight: 900
    font-size: 1.9em;
    color: $naranja;
    letter-spacing: 1.65px;
    line-height: 2.2em;

.parrafo
    /* Las recargas electró: */
    font-size: 1.1em;
    color: $negro;
    letter-spacing: 1px;
    line-height: 20px;
    width 55%


.btn
  &.registrate
    /* Rectangle 23: */
    background: $naranja;
    box-shadow: 0px 2px 4px 0px rgba(0,0,0,0.50);
    border-radius: 5px;
    /* REGISTRATE AQUÍ: */
    font-size: 1.5em;
    color: #FFFFFF;
    letter-spacing: 1.33px;
    line-height: 24px;
    text-decoration: none
    padding 1em 3em
    text-transform: uppercase
    margin 1em auto
    display inline-block
    &:hover
      background-color white
      color $verde3





